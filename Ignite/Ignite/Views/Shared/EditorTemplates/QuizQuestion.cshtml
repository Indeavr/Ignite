@model Ignite.ViewModels.QuizQuestion
<div>
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(m => m.CorrectAnswer)
    <h3> @Model.Statement </h3>

    @foreach (var answer in Model.Answers)
    {
        <p>
            @Html.RadioButtonFor(b => b.ChosenAnswer, answer.Letter)  @answer.Text
        </p>
    }
    @Html.ValidationMessageFor(m => m.ChosenAnswer, "Please Select An Answer !")
</div>
