@model Ignite.ViewModels.ImagesToCourosel

@{
    ViewBag.Title = "LaunchCourse";
}

    <div class="panel-heading"><label>CourseName: @Model.CourseName</label> <button id="#LaunchCourseButton" enabled>Take Test</button></div>

    <div id="myCarousel" class="carousel slide" data-ride="carousel" >
        <div class="carousel-inner" role="listbox">
            @{ var counter = 0;}
            @foreach (var image in Model.Images)
            {
                if (counter == 0)
                {
                    <div class="item active">
                        <img class="d-block img-fluid" src="@Url.Action("RenderImage", new { imgId = image.Id })">
                    </div>
                }
                else
                {
                    <div class="item">
                        <img class="d-block img-fluid" src="@Url.Action("RenderImage", new { imgId = image.Id })">
                    </div>
                }

                //if (counter == Model.Images.Count - 1)

                counter++;

            }
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" >
                <span class="glyphicon glyphicon-chevron-left carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>

            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" >
                <span class="glyphicon glyphicon-chevron-right carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
 
        </div>
    </div>





