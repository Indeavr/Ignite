@model Ignite.ViewModels.ImagesToCourosel

@{
    ViewBag.Title = "LaunchCourse";
}

<div class="panel-heading"><label>CourseName: @Model.CourseName</label> <button id="#LaunchCourseButton" enabled>Take Test</button></div>

<div id="myCarousel" data-interval="false" class="carousel slide" data-ride="carousel" data-wrap="false">
    <div class="carousel-inner" role="listbox">
        @{ var counter = 0;}
        @foreach (var image in Model.Images)
        {
            if (counter == 0)
            {
                <div class="item active">
                    <img class="d-block img-fluid" src="@Url.Action("RenderImage", new { imgId = image.Id })" alt="First slide">
                </div>
            }
            else
            {
                <div class="item">
                    <img class="d-block img-fluid" src="@Url.Action("RenderImage", new { imgId = image.Id })" alt="First slide">
                </div>
            }

            if (counter == Model.Images.Count - 1)
            {
                @section scripts{
                    <script type="text/javascript">
                        //$(document).ready(function LaunchButton() {
                        //    $('#LaunchCourseButton').prop('enabled', false),
                        //    $('#LaunchCourseButton').prop('disabled', true)
                        //})

                        (function enableButton() {

                            //$('#LaunchCourseButton').prop('enabled', true)
                            $('#LaunchCourseButton').disable(false)
                            //$('#LaunchCourseButton').prop('disabled', false)
                        })();

                    </script>
                }
                
            }

            counter++; 

        }

    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev" role="button">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next" onclick="$('#myCarousel').carousel">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



